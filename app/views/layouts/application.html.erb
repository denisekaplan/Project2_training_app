        <li> <%= button_to "Log out", sessions_path, method: :delete, class: "btn btn-primary" %></li>
        
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
          Tutorials <span class="caret"></span></a>
